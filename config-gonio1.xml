<?xml version='1.0' encoding='utf-8'?>
<settings>
    <autoconnect>COM7</autoconnect>
    <camera_preview>1</camera_preview>
    <camera_update_rate_ms>1000</camera_update_rate_ms>
    <camera0_gain>5</camera0_gain>
    <camera1_geometry>986x718+1331+484</camera1_geometry>
    <camera0_geometry>891x731+34+418</camera0_geometry>
    <camera0_exposure>100.57344480193</camera0_exposure>
    <camera0_exposure_log>1</camera0_exposure_log>
    <camera1_exposure>1000.72336272725</camera1_exposure>
    <camera1_gain>5</camera1_gain>
