	<horiz_sweep_end>30</horiz_sweep_end>

	<vert_sweep_start>-7</vert_sweep_start>
	<vert_sweep_end>10</vert_sweep_end>

	<vert_sweep_dur>3</vert_sweep_dur>
	<vert_sweep_npts>21</vert_sweep_npts> <!-- Odd number better -->

	<diag_sweep_dur>6</diag_sweep_dur>
	<diag_sweep_npts>21</diag_sweep_npts> <!-- Odd number better -->

