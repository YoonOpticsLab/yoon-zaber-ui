<?xml version='1.0' encoding='utf-8'?>
<settings>
    <autoconnect>COM4</autoconnect>
    <camera_preview>1</camera_preview>
    <camera_update_rate_ms>100</camera_update_rate_ms>
    <camera0_gain>18</camera0_gain>
    <camera1_geometry>986x718+1331+484</camera1_geometry>
    <camera0_geometry>891x731+34+418</camera0_geometry>
    <camera0_exposure>6309.57344480193</camera0_exposure>
    <camera0_exposure_log>1</camera0_exposure_log>
    <camera1_exposure>50118.72336272725</camera1_exposure>
    <camera1_gain>16</camera1_gain>
    <camera1_exposure_log>1</camera1_exposure_log>
    <camera_sweep_snap_rate_ms>20</camera_sweep_snap_rate_ms>

	<!-- Motor 1: Vertical
		 Motor 2: In/out
		 Motor 3: Lateral
		 Motor 4: Mirror rotation
		 Motor 5: Platform Swing
	-->
	
	<!-- Proportion of range of motors -->
	<pos1_horiz>,35,,1</pos1_horiz>
	<pos2_horiz>-30,0,30,1</pos2_horiz>
	<pos3_horiz>-30,75,30,1</pos3_horiz>
	<pos4_horiz>,,,1</pos4_horiz>
	<pos5_horiz>,,,0</pos5_horiz>

	<!-- Horizontal sweep -->
	<horiz_sweep_dur>3</horiz_sweep_dur>
	<horiz_sweep_npts>41</horiz_sweep_npts> <!-- Odd number better -->
	<horiz_sweep_mult>75</horiz_sweep_mult>
		
</settings>